    <!-- Image Zoom Modal -->
    <script>
        function openImageZoom(imageSrc) {
            let modal = document.getElementById('imageZoomModal');
            if (!modal) {
                modal = document.createElement('div');
                modal.id = 'imageZoomModal';
                modal.style.cssText = 'position: fixed; top: 0; left: 0; width: 100%; height: 100%; background: rgba(0,0,0,0.9); z-index: 10000; display: none; align-items: center; justify-content: center;';
                modal.innerHTML = `
                    <button onclick="closeImageZoom()" style="position: absolute; top: 1rem; right: 1rem; background: white; border: none; border-radius: 50%; width: 40px; height: 40px; font-size: 24px; cursor: pointer; z-index: 10001;">Ã—</button>
                    <img id="zoomedImage" src="" alt="Zoomed image" style="max-width: 90%; max-height: 90%; object-fit: contain;">
                `;
                document.body.appendChild(modal);
                
                modal.addEventListener('click', function(e) {
                    if (e.target === modal) closeImageZoom();
                });
                
                document.addEventListener('keydown', function(e) {
                    if (e.key === 'Escape') closeImageZoom();
                });
            }
            
            document.getElementById('zoomedImage').src = imageSrc;
            modal.style.display = 'flex';
        }

        function closeImageZoom() {
            const modal = document.getElementById('imageZoomModal');
            if (modal) modal.style.display = 'none';
        }

        // Tab Switching for Posted/Liked Projects
        function switchTab(tabName) {
            // Get all tabs
            const postedTab = document.getElementById('posted-tab');
            const likedTab = document.getElementById('liked-tab');
            const sectionTitle = document.getElementById('projects-section-title');
            
            // Remove active class from all tabs
            if (postedTab) postedTab.classList.remove('active');
            if (likedTab) likedTab.classList.remove('active');

            // Remove active class from all buttons
            const toggleBtns = document.querySelectorAll('.toggle-btn');
            toggleBtns.forEach(btn => btn.classList.remove('active'));

            // Show selected tab and update title
            if (tabName === 'posted') {
                if (postedTab) postedTab.classList.add('active');
                if (sectionTitle) sectionTitle.textContent = 'My Projects';
                // Add active class to posted button
                document.querySelector('[data-tab="posted"]').classList.add('active');
            } else if (tabName === 'liked') {
                if (likedTab) likedTab.classList.add('active');
                if (sectionTitle) sectionTitle.textContent = 'Liked Projects';
                // Add active class to liked button
                document.querySelector('[data-tab="liked"]').classList.add('active');
            }
            
            // Scroll to section title on mobile (smooth scroll with offset)
            if (window.innerWidth <= 768 && sectionTitle) {
                setTimeout(() => {
                    const yOffset = -100; // Offset for navbar and spacing
                    const element = sectionTitle;
                    const y = element.getBoundingClientRect().top + window.pageYOffset + yOffset;
                    
                    window.scrollTo({
                        top: y,
                        behavior: 'smooth'
                    });
                }, 100);
            }
        }
    </script>
    <!-- Liked Projects System -->
    <script src="/js/liked-projects.js"></script>

<!-- Report Issue Modal -->
<div id="reportIssueModal" class="footer-modal">
  <div class="footer-modal__content">
    <div class="footer-modal__header">
      <h2>üö® Report an Issue</h2>
      <span class="footer-modal__close" id="closeReportModal">&times;</span>
    </div>
    
    <div class="footer-modal__body">
      <p class="modal-description">Help us improve PROJEXIA by reporting any issues you encounter.</p>
      
      <form id="reportIssueForm">
        <div class="form-group">
          <label for="issueSubject">Subject *</label>
          <input 
            type="text" 
            id="issueSubject" 
            name="subject" 
            placeholder="Brief description of the issue"
            required
            maxlength="100"
          />
        </div>

        <div class="form-group">
          <label for="issueDescription">Description *</label>
          <textarea 
            id="issueDescription" 
            name="description" 
            rows="6"
            placeholder="Please provide detailed information about the issue..."
            required
            maxlength="1000"
          ></textarea>
          <small class="form-hint">Be as specific as possible to help us resolve the issue quickly.</small>
        </div>
        
        <div class="footer-modal__actions">
          <button type="button" class="btn-cancel" id="cancelReport">Cancel</button>
          <button type="submit" class="btn-submit">Submit Report</button>
        </div>
      </form>
    </div>
  </div>
</div>

